<style>
  .admin-card {
    background: rgba(245, 240, 232, 0.1);
    backdrop-filter: blur(2px);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
    border: 2px solid #8b7355;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .tags-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
    width: 100%;
  }

  /* On larger screens, ensure we use more of the available width */
  @media (min-width: 1200px) {
    .tags-grid {
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
    }
  }

  /* On very large screens, limit to reasonable number of columns */
  @media (min-width: 1600px) {
    .tags-grid {
      grid-template-columns: repeat(4, 1fr);
      max-width: 100%;
    }
  }

  .tag-item {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid #8b7355;
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    width: 100%;
    min-height: 120px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .tag-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  .tag-name {
    font-family: 'Crimson Text', serif;
    font-size: 1.25rem;
    font-weight: bold;
    color: #8b7355;
    margin-bottom: 0.5rem;
  }

  .tag-description {
    font-family: 'Crimson Text', serif;
    color: #666;
    font-style: italic;
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .tag-stats {
    font-size: 0.9rem;
    color: #999;
    margin-bottom: 1rem;
  }

  .tag-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-family: 'Crimson Text', serif;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: #8b7355;
    color: white;
  }

  .btn-primary:hover {
    background: #6d5a44;
    transform: translateY(-1px);
  }

  .btn-secondary {
    background: rgba(139, 115, 85, 0.2);
    color: #8b7355;
    border: 1px solid #8b7355;
  }

  .btn-secondary:hover {
    background: rgba(139, 115, 85, 0.3);
  }

  .btn-danger {
    background: #c53030;
    color: white;
  }

  .btn-danger:hover {
    background: #a02625;
  }
</style>

<div class="admin-section admin-content-wrapper">
  <% content_for(:breadcrumb) do %>
    <%= link_to "Dashboard", admin_root_path %> > <strong>Tags</strong>
  <% end %>
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; width: 100%;">
    <h1>Manage Tags</h1>
    <div>
      <%= link_to "Create New Tag", new_admin_tag_path, class: "admin-nav-link" %>
    </div>
  </div>


  <div class="admin-card" style="width: 100%;">
    <h2 style="font-family: 'Cinzel', serif; color: #8b7355; margin-bottom: 1.5rem;">All Tags</h2>
    
    <% if @tags.any? %>
      <div class="tags-grid">
        <% @tags.each do |tag| %>
          <div class="tag-item">
            <div class="tag-name"><%= tag.name %></div>
            <% if tag.description.present? %>
              <div class="tag-description"><%= tag.description %></div>
            <% end %>
            <div class="tag-stats">
              Used on <%= pluralize(tag.quotes.count, 'quote') %>
            </div>
            <div class="tag-actions">
              <%= link_to "Edit", edit_admin_tag_path(tag), class: "btn btn-secondary" %>
              <%= link_to "Delete", admin_tag_path(tag), 
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this tag?" }, 
                          class: "btn btn-danger" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p style="text-align: center; color: #666; font-style: italic; font-family: 'Crimson Text', serif; margin: 2rem 0;">
        No tags created yet. Create your first tag to start organizing quotes!
      </p>
    <% end %>
  </div>
</div>
