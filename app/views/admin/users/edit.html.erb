<% content_for(:breadcrumb) do %>
  <%= link_to "Dashboard", admin_root_path %> > 
  <%= link_to "Users", admin_users_path %> > 
  <%= link_to @user.email, admin_user_path(@user) %> > 
  <strong>Edit</strong>
<% end %>

<h1>Edit User</h1>

<div style="max-width: 600px;">
  <%= form_with model: [:admin, @user], local: true do |f| %>
    <% if @user.errors.any? %>
      <div style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
        <h4 style="margin: 0 0 0.5rem 0;">Please fix the following errors:</h4>
        <ul style="margin: 0;">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 1.5rem;">
      <%= f.label :email, style: "display: block; margin-bottom: 0.5rem; font-weight: 500;" %>
      <%= f.email_field :email, 
          style: "width: 100%; padding: 0.75rem; border: 1px solid #ced4da; border-radius: 4px;" %>
      <small style="color: #6c757d;">User's email address for login and notifications</small>
    </div>

    <div style="margin-bottom: 2rem;">
      <%= f.label :role, style: "display: block; margin-bottom: 0.5rem; font-weight: 500;" %>
      <%= f.select :role, 
          [["Commentor", "commentor"], ["Admin", "admin"]], 
          {},
          { style: "width: 100%; padding: 0.75rem; border: 1px solid #ced4da; border-radius: 4px;" } %>
      <small style="color: #6c757d;">
        <strong>Commentor:</strong> Can view quotes and leave comments (when feature is added)<br>
        <strong>Admin:</strong> Full access to admin panel and all management features
      </small>
    </div>

    <div style="display: flex; gap: 1rem;">
      <%= f.submit "Update User", 
          style: "background: #007bff; color: white; padding: 0.75rem 1.5rem; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem;" %>
      <%= link_to "Cancel", admin_user_path(@user), 
          style: "background: #6c757d; color: white; padding: 0.75rem 1.5rem; border-radius: 4px; text-decoration: none; display: inline-block;" %>
    </div>
  <% end %>
</div>

<!-- Current User Info -->
<div style="margin-top: 2rem; max-width: 600px;">
  <h3>Current User Information</h3>
  <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; border-left: 4px solid #6c757d;">
    <div style="display: grid; grid-template-columns: 120px 1fr; gap: 1rem; margin-bottom: 1rem;">
      <strong>Current Email:</strong>
      <span><%= @user.email %></span>
    </div>
    
    <div style="display: grid; grid-template-columns: 120px 1fr; gap: 1rem; margin-bottom: 1rem;">
      <strong>Current Role:</strong>
      <span style="background: <%= @user.admin? ? '#fff3e0' : '#e8f5e8' %>; 
                 color: <%= @user.admin? ? '#ef6c00' : '#2e7d32' %>; 
                 padding: 0.25rem 0.75rem; border-radius: 16px; font-weight: 500;">
        <%= @user.role.humanize %>
      </span>
    </div>
    
    <div style="display: grid; grid-template-columns: 120px 1fr; gap: 1rem; margin-bottom: 1rem;">
      <strong>Provider:</strong>
      <span><%= @user.provider&.humanize || "Email" %></span>
    </div>
    
    <div style="display: grid; grid-template-columns: 120px 1fr; gap: 1rem; margin-bottom: 1rem;">
      <strong>Joined:</strong>
      <span><%= @user.created_at.strftime("%B %d, %Y") %></span>
    </div>
    
    <div style="display: grid; grid-template-columns: 120px 1fr; gap: 1rem;">
      <strong>Last Sign In:</strong>
      <span>
        <% if @user.current_sign_in_at %>
          <%= @user.current_sign_in_at.strftime("%B %d, %Y") %>
        <% else %>
          Never signed in
        <% end %>
      </span>
    </div>
  </div>
</div>

<% if @user == current_user %>
  <div style="background: #fff3cd; border: 1px solid #ffeaa7; color: #856404; padding: 1rem; border-radius: 4px; margin-top: 1rem; max-width: 600px;">
    <strong>Note:</strong> You are editing your own user account. Be careful when changing your role or email address.
  </div>
<% end %>
