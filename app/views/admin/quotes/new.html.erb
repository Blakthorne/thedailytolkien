<% content_for(:breadcrumb) do %>
  <%= link_to "Dashboard", admin_root_path %> > 
  <%= link_to "Quotes", admin_quotes_path %> > 
  <strong>New Quote</strong>
<% end %>

<h1 style="color: #3d2c1d;">Add New Quote</h1>

<div style="max-width: 800px;">
  <%= form_with model: [:admin, @quote], local: true do |f| %>
    <% if @quote.errors.any? %>
      <div style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
        <h4 style="margin: 0 0 0.5rem 0;">Please fix the following errors:</h4>
        <ul style="margin: 0;">
          <% @quote.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="admin-section" style="margin-bottom: 1.5rem;">
      <div style="background: #f0ebe4; padding: 1rem; border-bottom: 1px solid #8b7355; margin: -1rem -1rem 1rem -1rem;">
        <h3 style="margin: 0; color: #3d2c1d;">Quote Text</h3>
      </div>
      
      <%= f.label :text, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; color: #3d2c1d;" %>
      <%= f.text_area :text, 
          placeholder: "Enter the quote text...",
          style: "width: 100%; min-height: 120px; padding: 0.75rem; border: 1px solid #8b7355; border-radius: 4px; font-family: Georgia, serif; font-style: italic; background: #fefcfa;" %>
    </div>

    <div class="admin-section" style="margin-bottom: 1.5rem;">
      <div style="background: #f0ebe4; padding: 1rem; border-bottom: 1px solid #8b7355; margin: -1rem -1rem 1rem -1rem;">
        <h3 style="margin: 0; color: #3d2c1d;">Book Details</h3>
      </div>
      
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
        <div>
          <%= f.label :book, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; color: #3d2c1d;" %>
          <%= f.text_field :book, 
              placeholder: "e.g., The Fellowship of the Ring",
              style: "width: 100%; padding: 0.75rem; border: 1px solid #8b7355; border-radius: 4px; background: #fefcfa;" %>
        </div>
        
        <div>
          <%= f.label :chapter, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; color: #3d2c1d;" %>
          <%= f.text_field :chapter, 
              placeholder: "Chapter number or name",
              style: "width: 100%; padding: 0.75rem; border: 1px solid #8b7355; border-radius: 4px; background: #fefcfa;" %>
        </div>
      </div>

      <div>
        <%= f.label :character, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; color: #3d2c1d;" %>
        <%= f.text_field :character, 
            placeholder: "Character who said the quote (optional)",
            style: "width: 100%; padding: 0.75rem; border: 1px solid #8b7355; border-radius: 4px; background: #fefcfa;" %>
      </div>
    </div>

    <div style="display: flex; gap: 1rem;">
      <%= f.submit "Create Quote", class: "admin-nav-link" %>
      <%= link_to "Cancel", admin_quotes_path, class: "admin-nav-link" %>
    </div>
  <% end %>
</div>

<div class="admin-section" style="margin-top: 2rem; max-width: 800px;">
  <div style="background: #f0ebe4; padding: 1rem; border-bottom: 1px solid #8b7355; margin: -1rem -1rem 1rem -1rem;">
    <h4 style="margin: 0; color: #3d2c1d;">Formatting Tips</h4>
  </div>
  
  <ul style="margin: 0; color: #3d2c1d;">
    <li>Enter the exact quote text as it appears in the book</li>
    <li>Use the full book title (e.g., "The Fellowship of the Ring")</li>
    <li>Chapter can be a number or name</li>
    <li>Character field is optional but helpful for attribution</li>
  </ul>
</div>
