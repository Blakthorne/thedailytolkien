<% content_for(:breadcrumb) do %>
   
  <%= link_to "Quotes", admin_quotes_path %> > 
  <strong>Quote #<%= @quote.id %></strong>
<% end %>

<div class="admin-page-header">
  <h1 class="admin-page-title">Quote #<%= @quote.id %></h1>
  <div>
    <%= link_to "Edit", edit_admin_quote_path(@quote), class: "admin-nav-link", 
        style: "margin-right: 0.5rem;" %>
    <%= link_to "Delete", admin_quote_path(@quote), 
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this quote? This action cannot be undone." },
        style: "background: #8b4513; color: white; padding: 0.5rem 1rem; border-radius: 4px; text-decoration: none;" %>
  </div>
</div>

<div>
  <!-- Quote Display (matches home page format) -->
  <div class="quote-card" style="margin-bottom: 2rem;">
    <blockquote class="quote-text" style="white-space: pre-wrap;">
      <%= @quote.text %>
    </blockquote>

    <div class="metadata-section">
      <% if @quote.book.present? %>
        <div class="metadata-item">
          <span class="metadata-label">Book</span>
          <span class="metadata-value"><%= @quote.book %></span>
        </div>
      <% end %>
      <% if @quote.chapter.present? %>
        <div class="metadata-item">
          <span class="metadata-label">Chapter</span>
          <span class="metadata-value"><%= @quote.chapter %></span>
        </div>
      <% end %>
      <% if @quote.context.present? %>
        <div class="metadata-item">
          <span class="metadata-label">Context</span>
          <span class="metadata-value"><%= @quote.context %></span>
        </div>
      <% end %>
      <% if @quote.character.present? %>
        <div class="metadata-item">
          <span class="metadata-label">Character</span>
          <span class="metadata-value"><%= @quote.character %></span>
        </div>
      <% end %>
    </div>

    <!-- Tags Section (without engagement buttons) -->
    <% if @quote.tags.any? %>
      <div class="quote-engagement-section">
        <div class="quote-tags">
          <% @quote.tags.each do |tag| %>
            <span class="tag-badge"><%= tag.name %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quote Details -->
  <div class="admin-section" style="margin-bottom: 2rem;">
    <div style="background: #f0ebe4; padding: 1rem; border-bottom: 1px solid #8b7355; margin: -1rem -1rem 1rem -1rem;">
      <h3 style="margin: 0; color: #3d2c1d;">Quote Details</h3>
    </div>
    
    <div>
      <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem; margin-bottom: 1rem;">
        <strong style="color: #3d2c1d;">ID:</strong>
        <span style="color: #3d2c1d;"><%= @quote.id %></span>
      </div>
      
      <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem; margin-bottom: 1rem;">
        <strong style="color: #3d2c1d;">Book:</strong>
        <span style="color: #3d2c1d;"><%= @quote.book %></span>
      </div>
      
      <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem; margin-bottom: 1rem;">
        <strong style="color: #3d2c1d;">Chapter:</strong>
        <span style="color: #3d2c1d;"><%= @quote.chapter || "Not specified" %></span>
      </div>
      
      <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem; margin-bottom: 1rem;">
        <strong style="color: #3d2c1d;">Context:</strong>
        <span style="color: #3d2c1d;"><%= @quote.context || "Not specified" %></span>
      </div>
      
      <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem; margin-bottom: 1rem;">
        <strong style="color: #3d2c1d;">Character:</strong>
        <span style="color: #3d2c1d;"><%= @quote.character || "Not specified" %></span>
      </div>
      
      <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem; margin-bottom: 1rem;">
        <strong style="color: #3d2c1d;">Text Length:</strong>
        <span style="color: #3d2c1d;"><%= @quote.text.length %> characters</span>
      </div>
      
      <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem; margin-bottom: 1rem;">
        <strong style="color: #3d2c1d;">Created:</strong>
        <span style="color: #3d2c1d;"><%= @quote.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
      </div>
      
      <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem; margin-bottom: 1rem;">
        <strong style="color: #3d2c1d;">Last Updated:</strong>
        <span style="color: #3d2c1d;"><%= @quote.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
      </div>
      
      <div style="display: grid; grid-template-columns: 150px 1fr; gap: 1rem;">
        <strong style="color: #3d2c1d;">Tags:</strong>
        <div>
          <% if @quote.tags.any? %>
            <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
              <% @quote.tags.each do |tag| %>
                <span style="background: rgba(139, 115, 85, 0.15); color: #3d2c1d; padding: 0.25rem 0.75rem; border-radius: 12px; font-size: 0.85rem; border: 1px solid rgba(139, 115, 85, 0.3);">
                  <%= tag.name %>
                </span>
              <% end %>
            </div>
            <div style="margin-top: 0.5rem;">
              <%= link_to "Manage Tags", admin_tags_path, 
                  style: "color: #8b7355; text-decoration: underline; font-size: 0.85rem;" %>
            </div>
          <% else %>
            <span style="color: #8b7355; font-style: italic;">
              No tags assigned. 
              <%= link_to "Add tags", edit_admin_quote_path(@quote), 
                  style: "color: #8b7355; text-decoration: underline;" %> 
              to organize this quote.
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div style="background: #f0ebe4; padding: 1.5rem; border-radius: 8px; border-left: 4px solid #8b7355;">
    <h4 style="margin: 0 0 1rem 0; color: #3d2c1d;">Quick Actions</h4>
    <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
      <%= link_to "Edit Quote", edit_admin_quote_path(@quote), class: "admin-nav-link" %>
      <%= link_to "View on Site", discover_path(@quote.id), 
          style: "background: #8b7355; color: white; padding: 0.5rem 1rem; border-radius: 4px; text-decoration: none;", 
          target: "_blank" %>
      <%= link_to "Back to Quotes", admin_quotes_path, class: "admin-nav-link" %>
    </div>
  </div>
</div>
