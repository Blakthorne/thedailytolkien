<% content_for(:breadcrumb) do %>
  <%= link_to "Dashboard", admin_root_path %> > 
  <%= link_to "Quotes", admin_quotes_path %> > 
  <%= link_to "Quote ##{@quote.id}", admin_quote_path(@quote) %> > 
  <strong>Edit</strong>
<% end %>

<h1>Edit Quote #<%= @quote.id %></h1>

<div style="max-width: 800px;">
  <%= form_with model: [:admin, @quote], local: true do |f| %>
    <% if @quote.errors.any? %>
      <div style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
        <h4 style="margin: 0 0 0.5rem 0;">Please fix the following errors:</h4>
        <ul style="margin: 0;">
          <% @quote.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 1.5rem;">
      <%= f.label :text, style: "display: block; margin-bottom: 0.5rem; font-weight: 500;" %>
      <%= f.text_area :text, 
          style: "width: 100%; min-height: 120px; padding: 0.75rem; border: 1px solid #ced4da; border-radius: 4px; font-family: Georgia, serif; font-style: italic;" %>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1.5rem;">
      <div>
        <%= f.label :book, style: "display: block; margin-bottom: 0.5rem; font-weight: 500;" %>
        <%= f.text_field :book, 
            style: "width: 100%; padding: 0.75rem; border: 1px solid #ced4da; border-radius: 4px;" %>
      </div>
      
      <div>
        <%= f.label :chapter, style: "display: block; margin-bottom: 0.5rem; font-weight: 500;" %>
        <%= f.text_field :chapter, 
            style: "width: 100%; padding: 0.75rem; border: 1px solid #ced4da; border-radius: 4px;" %>
      </div>
    </div>

    <div style="margin-bottom: 2rem;">
      <%= f.label :character, style: "display: block; margin-bottom: 0.5rem; font-weight: 500;" %>
      <%= f.text_field :character, 
          placeholder: "Character who said the quote (optional)",
          style: "width: 100%; padding: 0.75rem; border: 1px solid #ced4da; border-radius: 4px;" %>
    </div>

    <div style="display: flex; gap: 1rem;">
      <%= f.submit "Update Quote", 
          style: "background: #007bff; color: white; padding: 0.75rem 1.5rem; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem;" %>
      <%= link_to "Cancel", admin_quote_path(@quote), 
          style: "background: #6c757d; color: white; padding: 0.75rem 1.5rem; border-radius: 4px; text-decoration: none; display: inline-block;" %>
    </div>
  <% end %>
</div>

<!-- Quote Preview -->
<div style="margin-top: 2rem; max-width: 800px;">
  <h3>Current Quote Preview</h3>
  <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; border-left: 4px solid #6c757d;">
    <blockquote style="margin: 0; font-size: 1.1rem; font-style: italic; color: #495057; line-height: 1.6;">
      "<%= simple_format(@quote.text) %>"
    </blockquote>
    
    <div style="margin-top: 1rem; color: #6c757d;">
      <strong>â€” <%= @quote.book %></strong>
      <% if @quote.chapter %>
        <br>Chapter <%= @quote.chapter %>
      <% end %>
      <% if @quote.character %>
        <br>Spoken by <%= @quote.character %>
      <% end %>
    </div>
  </div>
</div>
