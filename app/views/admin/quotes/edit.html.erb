<% content_for(:breadcrumb) do %>
  <%= link_to "Dashboard", admin_root_path %> > 
  <%= link_to "Quotes", admin_quotes_path %> > 
  <%= link_to "Quote ##{@quote.id}", admin_quote_path(@quote) %> > 
  <strong>Edit</strong>
<% end %>

<h1 style="color: #3d2c1d;">Edit Quote #<%= @quote.id %></h1>

<div style="max-width: 800px;">
  <%= form_with model: [:admin, @quote], local: true do |f| %>
    <% if @quote.errors.any? %>
      <div style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
        <h4 style="margin: 0 0 0.5rem 0;">Please fix the following errors:</h4>
        <ul style="margin: 0;">
          <% @quote.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="admin-section" style="margin-bottom: 1.5rem;">
      <div style="background: #f0ebe4; padding: 1rem; border-bottom: 1px solid #8b7355; margin: -1rem -1rem 1rem -1rem;">
        <h3 style="margin: 0; color: #3d2c1d;">Quote Text</h3>
      </div>
      
      <%= f.label :text, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; color: #3d2c1d;" %>
      <%= f.text_area :text, 
          style: "width: 100%; min-height: 120px; padding: 0.75rem; border: 1px solid #8b7355; border-radius: 4px; font-family: Georgia, serif; font-style: italic; background: #fefcfa;" %>
    </div>

    <div class="admin-section" style="margin-bottom: 1.5rem;">
      <div style="background: #f0ebe4; padding: 1rem; border-bottom: 1px solid #8b7355; margin: -1rem -1rem 1rem -1rem;">
        <h3 style="margin: 0; color: #3d2c1d;">Book Details</h3>
      </div>
      
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
        <div>
          <%= f.label :book, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; color: #3d2c1d;" %>
          <%= f.text_field :book, 
              style: "width: 100%; padding: 0.75rem; border: 1px solid #8b7355; border-radius: 4px; background: #fefcfa;" %>
        </div>
        
        <div>
          <%= f.label :chapter, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; color: #3d2c1d;" %>
          <%= f.text_field :chapter, 
              style: "width: 100%; padding: 0.75rem; border: 1px solid #8b7355; border-radius: 4px; background: #fefcfa;" %>
        </div>
      </div>

      <div>
        <%= f.label :context, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; color: #3d2c1d;" %>
        <%= f.text_field :context,
            style: "width: 100%; padding: 0.75rem; border: 1px solid #8b7355; border-radius: 4px; background: #fefcfa;" %>
      </div>

      <div>
        <%= f.label :character, style: "display: block; margin-bottom: 0.5rem; font-weight: 500; color: #3d2c1d;" %>
        <%= f.text_field :character, 
            placeholder: "Character who said the quote (optional)",
            style: "width: 100%; padding: 0.75rem; border: 1px solid #8b7355; border-radius: 4px; background: #fefcfa;" %>
      </div>
    </div>

    <div class="admin-section" style="margin-bottom: 1.5rem;">
      <div style="background: #f0ebe4; padding: 1rem; border-bottom: 1px solid #8b7355; margin: -1rem -1rem 1rem -1rem;">
        <h3 style="margin: 0; color: #3d2c1d;">Tags</h3>
      </div>
      
      <div style="margin-bottom: 1rem;">
        <p style="color: #8b7355; margin: 0 0 1rem 0; font-style: italic;">
          Select tags that apply to this quote. Tags help organize quotes by theme, character, or topic.
        </p>
        
        <% if @all_tags.any? %>
          <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 0.75rem;">
            <% @all_tags.each do |tag| %>
              <label style="display: flex; align-items: center; gap: 0.5rem; padding: 0.5rem; background: #fefcfa; border: 1px solid #8b7355; border-radius: 4px; cursor: pointer;">
                <%= f.check_box :tag_ids, 
                    { multiple: true, checked: @quote.tags.include?(tag) }, 
                    tag.id, "" %>
                <span style="color: #3d2c1d; font-weight: 500;"><%= tag.name %></span>
                <% if tag.description.present? %>
                  <span style="color: #8b7355; font-size: 0.8rem;">(<%= truncate(tag.description, length: 30) %>)</span>
                <% end %>
              </label>
            <% end %>
          </div>
        <% else %>
          <div style="background: #f8f9fa; padding: 1rem; border-radius: 4px; border: 1px dashed #8b7355;">
            <p style="margin: 0; color: #8b7355; text-align: center;">
              No tags available. <%= link_to "Create tags", admin_tags_path, style: "color: #8b7355; text-decoration: underline;" %> first.
            </p>
          </div>
        <% end %>
      </div>
      
      <div style="background: #f8f9fa; padding: 0.75rem; border-radius: 4px; border-left: 3px solid #8b7355;">
        <p style="margin: 0; color: #8b7355; font-size: 0.9rem;">
          ðŸ’¡ <strong>Tip:</strong> You can also <%= link_to "manage all tags", admin_tags_path, style: "color: #8b7355; text-decoration: underline;" %> from the Tags section.
        </p>
      </div>
    </div>

    <div style="display: flex; gap: 1rem;">
      <%= f.submit "Update Quote", class: "admin-nav-link" %>
      <%= link_to "Cancel", admin_quote_path(@quote), class: "admin-nav-link" %>
    </div>
  <% end %>
</div>

<!-- Quote Preview -->
<div style="margin-top: 2rem; max-width: 800px;">
  <div class="admin-section">
    <div style="background: #f0ebe4; padding: 1rem; border-bottom: 1px solid #8b7355; margin: -1rem -1rem 1rem -1rem;">
      <h3 style="margin: 0; color: #3d2c1d;">Current Quote Preview</h3>
    </div>
    
    <div style="background: #fefcfa; padding: 1.5rem; border-radius: 8px; border-left: 4px solid #8b7355;">
      <blockquote style="margin: 0; font-size: 1.1rem; font-style: italic; color: #3d2c1d; line-height: 1.6;">
        "<%= simple_format(@quote.text) %>"
      </blockquote>
      
      <div style="margin-top: 1rem; color: #8b7355;">
        <strong>â€” <%= @quote.book %></strong>
        <% if @quote.chapter %>
          <br>Chapter <%= @quote.chapter %>
        <% end %>
        <% if @quote.context %>
          <br>Context: <%= @quote.context %>
        <% end %>
        <% if @quote.character %>
          <br>Spoken by <%= @quote.character %>
        <% end %>
      </div>
    </div>
  </div>
</div>
