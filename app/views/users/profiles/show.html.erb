<main class="main-content profile-page">
  <div class="profile-card">
    <!-- Page Header -->
    <div class="profile-header">
      <div class="profile-title-section">
        <%= link_to root_path, class: "back-button", "aria-label": "Back to home" do %>
          <svg class="back-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
        <% end %>
        <h1 class="profile-title">My Profile</h1>
      </div>
    </div>

    <!-- Personal Information Section -->
    <section class="profile-section">
      <h2 class="section-title">Personal Information</h2>
      
      <div class="profile-info-grid">
        <div class="profile-info-item profile-name-item">
          <span class="info-label">Name</span>
          <div class="info-value-with-action">
            <span class="info-value"><%= @user.full_name %></span>
            <%= link_to edit_profile_path, class: "inline-edit-button", "aria-label": "Edit name", title: "Edit name" do %>
              <svg class="edit-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
            <% end %>
          </div>
        </div>

        <div class="profile-info-item">
          <span class="info-label">Email</span>
          <span class="info-value"><%= @user.email %></span>
        </div>

        <div class="profile-info-item">
          <span class="info-label">Member Since</span>
          <span class="info-value"><%= @user.created_at.strftime("%B %Y") %></span>
        </div>

        <div class="profile-info-item">
          <span class="info-label">Authentication</span>
          <% if @user.oauth_user? %>
            <span class="info-value">
              <span class="auth-badge oauth-badge">
                <svg class="auth-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
                Signed in with Google
              </span>
            </span>
          <% else %>
            <span class="info-value">
              <span class="auth-badge">
                <svg class="auth-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                Email & Password
              </span>
            </span>
          <% end %>
        </div>

      </div>

      <% unless @user.oauth_user? %>
        <div class="profile-action-section">
          <%= link_to new_user_password_path, class: "secondary-button" do %>
            <svg class="button-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
            Reset Password
          <% end %>
        </div>
      <% end %>
    </section>

    <!-- Streak Statistics Section -->
    <section class="profile-section">
      <h2 class="section-title">Streak Statistics</h2>
      
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">üî•</div>
          <div class="stat-content">
            <span class="stat-label">Current Streak</span>
            <span class="stat-value"><%= @user.current_streak %> days</span>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">üèÜ</div>
          <div class="stat-content">
            <span class="stat-label">Longest Streak</span>
            <span class="stat-value"><%= @user.longest_streak %> days</span>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">üí¨</div>
          <div class="stat-content">
            <span class="stat-label">Total Comments</span>
            <span class="stat-value"><%= @user.comments_count %></span>
          </div>
        </div>
      </div>
    </section>
  </div>
</main>
